<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_gravity="right"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="64dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text">

        <Button
            android:onClick="Touch7"
            android:text="7" />

        <Button
            android:onClick="Touch8"
            android:text="8" />

        <Button
            android:onClick="Touch9"
            android:text="9" />

        <Button
            android:onClick="TouchDivide"
            android:text="/" />

        <Button
            android:onClick="Touch4"
            android:text="4" />

        <Button
            android:onClick="Touch5"
            android:text="5" />

        <Button
            android:onClick="Touch6"
            android:text="6" />

        <Button
            android:onClick="TouchMultiply"
            android:text="*" />

        <Button
            android:onClick="Touch1"
            android:text="1" />

        <Button
            android:onClick="Touch2"
            android:text="2" />

        <Button
            android:onClick="Touch3"
            android:text="3" />

        <Button
            android:onClick="TouchMinus"
            android:text="-" />

        <Button
            android:onClick="Touch0"
            android:text="0"
            app:layout_columnSpan="1"
            app:layout_gravity="fill" />
        <Button
            android:onClick="TouchDot"
            android:text="."
            app:layout_columnSpan="1"
            app:layout_gravity="fill" />

        <Button
            android:onClick="Touch00"
            android:text="00"
            app:layout_column="2" />

        <Button
            android:onClick="TouchPlus"
            android:text="+"
            app:layout_gravity="fill_vertical"
            app:layout_rowSpan="1" />

        <Button
            android:onClick="TouchEqual"
            android:text="="
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_gravity="fill_horizontal" />

        <Button
            android:onClick="TouchOpen"
            android:text="("
            app:layout_gravity="fill_horizontal" />

        <Button
            android:onClick="TouchClose"
            android:text=")"
            app:layout_gravity="fill_horizontal" />

        <Button
            android:onClick="TouchDel"
            android:text="â†"
            app:layout_gravity="fill_horizontal" />
    </androidx.gridlayout.widget.GridLayout>

    <EditText
        android:id="@+id/text"
        style="@style/Widget.AppCompat.EditText"
        android:shadowColor="#616161"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:gravity="bottom|right"
        android:inputType="textMultiLine"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:alpha="0"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />


</androidx.constraintlayout.widget.ConstraintLayout>